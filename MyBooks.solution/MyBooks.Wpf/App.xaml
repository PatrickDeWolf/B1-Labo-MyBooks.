<Application
	x:Class="MyBooks.Wpf.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:MyBooks.Wpf"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:viewModels="clr-namespace:MyBooks.BLL;assembly=MyBooks.BLL"
	StartupUri="Views/AuthorView.xaml"
	mc:Ignorable="d">

	<Application.Resources>

		<ResourceDictionary>

			<!--  Registratie van de ViewModelLocator  -->
			<viewModels:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />

			<!--  Registratie van de verschillende Converters  -->

			<Style TargetType="Window">
				<Setter Property="FontSize" Value="18" />
			</Style>

			<Style x:Key="PageTitle" TargetType="Label">
				<Setter Property="Foreground" Value="#ffffffff" />
				<Setter Property="FontSize" Value="24" />
			</Style>

			<Style TargetType="Label">
				<Setter Property="FontSize" Value="16" />
				<Setter Property="Foreground" Value="#ff0000ff" />
			</Style>

			<Style TargetType="TextBlock">
				<Setter Property="FontSize" Value="16" />
				<Setter Property="Foreground" Value="#ff0000ff" />
			</Style>


		</ResourceDictionary>

	</Application.Resources>

</Application>
