<Application
	x:Class="MyBooks.Wpf.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:MyBooks.Wpf"
	xmlns:viewModels="clr-namespace:MyBooks.BLL;assembly=MyBooks.BLL"
	StartupUri="Views/PublisherView.xaml">

	<Application.Resources>

		<ResourceDictionary>

			<!--  Registratie van de ViewModelLocator  -->
			<viewModels:ViewModelLocator x:Key="Locator" />

			<!--  Registratie van de verschillende Converters  -->


			<Style TargetType="Label">
				<Setter Property="FontSize" Value="16" />
				<Setter Property="Foreground" Value="#ff0000ff" />
			</Style>

			<Style TargetType="TextBlock">
				<Setter Property="FontSize" Value="16" />
				<Setter Property="Foreground" Value="#ff0000ff" />
			</Style>


		</ResourceDictionary>

	</Application.Resources>

</Application>
